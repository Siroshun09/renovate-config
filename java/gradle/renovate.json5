{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':configMigration',
    'schedule:daily',
    ':updateNotScheduled'
  ],
  packageRules: [
    {
      matchManagers: [
        'gradle',
        'gradle-wrapper'
      ],
      "allowedVersions": "!/.*-SNAPSHOT$/"
    },
    {
      groupName: 'all non-major dependencies for Gradle',
      groupSlug: 'gradle-all-minor-patch',
      matchManagers: [
        'gradle',
        'gradle-wrapper'
      ],
      matchUpdateTypes: [
        'minor',
        'patch'
      ],
      matchPackageNames: [
        '*'
      ]
    }
  ],
  reviewers: [
    'Siroshun09'
  ]
}
